---
interface Props {
  id: string;
  type?: astroHTML.JSX.HTMLInputTypeAttribute;
  placeholder?: string;
}

const { id, type = "text", placeholder } = Astro.props;
---

<input
  id={id}
  type={type}
  class="bg-background-dark rounded-lg border border-solid border-brand-white/15 px-2.5 py-2 placeholder:text-brand-gray focus:outline-none focus:ring-1 focus:ring-brand-white"
  placeholder={placeholder}
/>
