---
import { SHOWCASE_PROJECTS } from "@/constants/showcase-projects";

const array = Array.from({ length: 2 }).fill(0);
---

<section class="relative w-[102%] overflow-hidden whitespace-nowrap sm:w-full">
  {
    array.map(() => (
      <ul class="inline-flex animate-carousel gap-14 px-7 first:pl-0 sm:gap-20 sm:px-10">
        {SHOWCASE_PROJECTS.map(({ title, logoSrc }) => (
          <li class="h-full w-36 shrink-0 sm:w-52">
            <img
              src={logoSrc}
              alt={`${title} Logo`}
              title={title}
              class="object-object w-36 invert sm:w-52 dark:invert-0"
            />
          </li>
        ))}
      </ul>
    ))
  }
</section>

<style>
  section::before {
    content: "";
    position: absolute;
    height: 100%;
    top: 0;
    left: 0;
    width: 20%;
    background: linear-gradient(
      to left,
      rgba(255, 255, 255, 0),
      theme(colors.background.white)
    );
    z-index: 1;
  }

  section::after {
    content: "";
    position: absolute;
    height: 100%;
    top: 0;
    right: 0;
    width: 20%;
    background: linear-gradient(
      to right,
      rgba(255, 255, 255, 0),
      theme(colors.background.white)
    );
    z-index: 1;
  }

  @media (prefers-color-scheme: dark) {
    section::before {
      background: linear-gradient(
        to left,
        rgba(255, 255, 255, 0),
        theme(colors.background.dark)
      );
    }

    section::after {
      background: linear-gradient(
        to right,
        rgba(255, 255, 255, 0),
        theme(colors.background.dark)
      );
    }
  }
</style>
