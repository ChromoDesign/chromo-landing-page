---
import type { TeamMember } from "@/constants/team-members";
import linkedInLogo from "@/assets/icons/linkedin-logo.svg";
import xLogo from "@/assets/icons/x-logo.svg";

interface Props {
  teamMember: TeamMember;
}

const { teamMember } = Astro.props;
---

<div class="relative group">
  <img
    src={teamMember.image.src}
    alt={teamMember.image.alt}
    class="absolute group-hover:translate-x-1.5 group-hover:-rotate-6 opacity-0 group-hover:opacity-100 transition duration-200 -z-10 h-full top-0 left-0 w-full object-cover rounded-3xl"
  />
  <article
    class="bg-brand-background group-hover:bg-brand-background/75 group-hover:translate-y-28 group-hover:rotate-12 transition-transform duration-200 p-5 border border-solid border-brand-white/15 rounded-3xl"
  >
    <div class="mb-24 space-y-1.5">
      <h3>{teamMember.name}</h3>
      <p class="text-brand-gray text-sm">{teamMember.jobTitle}</p>
    </div>

    <ul class="flex gap-2">
      <li>
        <a href={teamMember.socials.linkedin} target="_blank">
          <img
            src={linkedInLogo.src}
            alt="LinkedIn Logo"
            class="size-6 rotate-[-12.11deg]"
          />
        </a>
      </li>
      <li>
        <a href={teamMember.socials.twitter} target="_blank">
          <img
            src={xLogo.src}
            alt="Twitter Logo"
            class="size-6 rotate-[-12.11deg]"
          />
        </a>
      </li>
    </ul>
  </article>
</div>
