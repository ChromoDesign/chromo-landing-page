---
import type { VariantProps } from "class-variance-authority";
import { Icon } from "../common/icon";
import { Link } from "../common/link";
import boltSvg from "@material-symbols/svg-700/rounded/bolt.svg?raw";
import type { buttonVariants } from "../ui/button";

export interface Props extends VariantProps<typeof buttonVariants> {}

const { variant } = Astro.props;
---

<Link
  size="lg"
  href="https://cal.com/alamo-algorithmics"
  className="inline-flex items-center gap-2"
  target="_blank"
  rel="noopener noreferrer"
  variant={variant}
  title="Book a Free Call Now"
>
  <slot /><Icon icon={boltSvg} className="size-5 fill-current" />
</Link>
