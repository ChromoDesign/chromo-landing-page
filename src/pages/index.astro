---
import Layout from "../layouts/layout.astro";
import Hero from "@/components/sections/hero.astro";
import SolutionsSection from "@/components/sections/solutions-section.astro";
import ContactSection from "@/components/sections/contact-section.astro";
import ResultsSection from "@/components/sections/results-section.astro";
import ShowcaseSection from "@/components/sections/showcase-section.astro";
import FaqSection from "@/components/sections/faq-section.astro";
import NewTechnologiesSection from "@/components/sections/new-technologies-section.astro";
import SecondaryContactSection from "@/components/sections/secondary-contact-section.astro";
import TestimonialsSection from "@/components/sections/testimonials-section.astro";
---

<Layout
  title="Alamo Algorithmics: IT Services | UI/UX Design, Development"
  description="Explore Alamo Algorithmics, your partner in tech solutions. We offer UI/UX design, web development, and mobile app development with a focus on innovation, quality, and personalized results. Bring your ideas to life!"
>
  <div class="container mx-auto mb-32 px-7 sm:px-0">
    <Hero />
  </div>
  <div class="bg-red-3d00 mt-40 space-y-28 md:space-y-52">
    <ResultsSection />
    <ShowcaseSection />
    <NewTechnologiesSection />
    <SolutionsSection />
    <ContactSection />
    <TestimonialsSection />
    <FaqSection />
    <SecondaryContactSection />
  </div>
</Layout>
