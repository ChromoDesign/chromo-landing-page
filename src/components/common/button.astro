---
import tw from "@/utils/tw";

interface Props {
  text: string;
  href?: string;
  iconSrc?: string;
  type?: "button" | "submit" | "reset";
}

const { text, href, iconSrc, type = "button" } = Astro.props;

const isLink = Boolean(href);

const style = tw`group flex w-max items-center rounded-full border border-solid border-brand-white/50 bg-transparent px-7 py-3.5 text-sm text-brand-white transition-colors duration-100 hover:bg-brand-white/5`;
---

{
  isLink ? (
    <a href={href} class={style}>
      {text}
    </a>
  ) : (
    <button class={style} type={type}>
      <span class="leading-none">{text}</span>
      {iconSrc && (
        <img
          src={iconSrc}
          alt="Icon"
          class="ml-2.5 size-4 rotate-[-35.555deg] fill-current transition-transform duration-200 group-hover:translate-x-1"
        />
      )}
    </button>
  )
}
