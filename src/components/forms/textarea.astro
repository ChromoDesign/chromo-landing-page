---
interface Props {
  id: string;
  placeholder?: string;
}

const { id, placeholder } = Astro.props;
---

<textarea
  id={id}
  class="rounded-lg border border-solid border-brand-white/15 bg-brand-background px-5 py-2.5 placeholder:text-brand-gray focus:outline-none focus:ring-1 focus:ring-brand-white"
  placeholder={placeholder}></textarea>
