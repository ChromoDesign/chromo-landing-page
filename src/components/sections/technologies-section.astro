---
import GradientSpan from "@/components/common/gradient-span.astro";
import { SECTIONS } from "@/constants/sections";
import Section from "@/components/common/section.astro";
import { TECHNOLOGIES } from "@/constants/technologies";
import Button from "../common/button.astro";
---

<Section id={SECTIONS.OUR_TEAM.id}>
  <div
    class="flex flex-col lg:gap-40 gap-20 xl:gap-10 items-center md:justify-between xl:flex-row"
  >
    <div class="space-y-14">
      <h2 class="w-[15ch] text-center xl:text-start">
        Dedicated to <GradientSpan color="purple">the best.</GradientSpan>
      </h2>
      <div class="hidden xl:block">
        <Button text="Book an Appointment" href={SECTIONS.CONTACT.href} />
      </div>
    </div>

    <ul
      class="grid w-full grow place-items-center xl:place-items-end grid-cols-[repeat(auto-fill,_minmax(100px,_1fr))] gap-x-20 gap-y-8 2xl:gap-x-32 2xl:gap-y-20 auto-rows-fr"
    >
      {
        TECHNOLOGIES.map((technology) => (
          <li class="rounded-3xl">
            <img
              src={technology.icon.src}
              alt={technology.icon.alt}
              class="object-cover w-24"
            />
          </li>
        ))
      }
    </ul>

    <div class="block xl:hidden">
      <Button text="Book an Appointment" href={SECTIONS.CONTACT.href} />
    </div>
  </div>
</Section>
