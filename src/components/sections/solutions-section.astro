---
import { SOLUTIONS } from "@/constants/solutions";
import SolutionCard from "@/components/common/solution-card.astro";
import GradientSpan from "@/components/common/gradient-span.astro";
import SectionHeader from "@/components/common/section-header.astro";
import { SECTIONS } from "@/constants/sections";
import Section from "@/components/common/section.astro";
---

<Section id={SECTIONS.OUR_SERVICES.id}>
  <SectionHeader
    subtitle="Transforming ideas into remarkable digital experiences."
  >
    <span slot="title">
      Innovative solutions tailored <GradientSpan color="blue"
        >for you.</GradientSpan
      >
    </span>
  </SectionHeader>

  <section class="grid grid-cols-1 lg:grid-cols-2 gap-10">
    {SOLUTIONS.map((solution) => <SolutionCard {...solution} />)}
  </section>
</Section>
