{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2023",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "exclude": [
    "node_modules",
    "dist",
    "astro"
  ],
  "include": [
    "./src/**/*",
    "./eslint.config.js"
  ]
}